<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "org.example.Database.MoveDTO" table = "Move">

        <meta attribute = "class-description">
            This class contains the move detail.
        </meta>
        <id name = "ID" type = "int" column = "ID">
            <generator class="native"/>
        </id>
        <property name = "gameID" column = "GameID" type = "int"/>
        <property name = "number" column = "number" type = "int"/>
        <property name = "newX" column = "newX" type = "int"/>
        <property name = "newY" column = "newY" type = "int"/>
        <property name = "oldX" column = "oldX" type = "int"/>
        <property name = "oldY" column = "oldY" type = "int"/>
        <property name = "color" column = "color" type = "string"/>
    </class>
</hibernate-mapping>